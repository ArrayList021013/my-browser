{
    "compilerOptions": {
        "outDir": "./dist/src",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"]
        },
        "target": "ESNext",
        "module": "CommonJS",
        "lib": ["dom", "ESNext"],
        "jsx": "react-jsx",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*", "src/renderer/global.d.ts"],
    "exclude": ["node_modules"]
}